@model LoginData

@{
	Layout = "_Public";
}

<h2>Inloggning för Småstads personal</h2>
<p class="info">En säker tjänst från Småstads IT-avdelning</p>

<form method="post" asp-controller="Home" asp-action="Login">
	<p>
		<input type="hidden" name="isSubmitted" value="true" />
	</p>
	<p>
		<label asp-for="UserName" class="label">Användarnamn:</label><br />
		<input asp-for="UserName" />
		<span asp-validation-for="UserName" style="color: orange"></span>
	</p>
	<p>
		<label asp-for="Password" class="label">Lösenord:</label><br />
		<input asp-for="Password" />
		<span asp-validation-for="Password" style="color: orange"></span>
	</p>
	<p>
		<input class="button" type="submit" value="Logga in" />
	</p>
	<div asp-validation-summary="All" style="color: orange"></div>
</form>