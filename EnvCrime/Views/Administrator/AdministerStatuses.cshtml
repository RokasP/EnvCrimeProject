@model IEnumerable<ErrandStatus>

@{
    Layout = "_Staff";
}

<h2>Statuser</h2>
<p class="info">Du är inloggad som administratör</p>
<span><a class="button right" asp-controller="Administrator" asp-action="EditStatus" asp-route-statusId="0">Lägg till</a></span>

<table>
    <tr>
        <th>Id</th>
        <th>Namn</th>
        <th></th>
    </tr>
    @if (Model.Any())
    {
        @foreach (var status in Model)
        {
            <tr>
                <td>@status.StatusId</td>
                <td>@status.StatusName</td>
                <td>
                    <a asp-controller="Administrator" asp-action="EditStatus" asp-route-statusId="@status.StatusId"><img src="../images/edit.png" height="16" width="16" /></a>
                    <a asp-controller="Administrator" asp-action="DeleteStatus" asp-route-statusId="@status.StatusId"><img src="../images/delete.png" height="16" width="16" /></a>
                </td>
            </tr>
        }
    }
</table>
@if (!Model.Any())
{
    <p style="text-align:center">
        <i>Inga statuser finns</i>
    </p>
}