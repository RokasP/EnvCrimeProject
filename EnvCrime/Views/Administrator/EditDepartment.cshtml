@model Department

@{
    Layout = "_Staff";
}

<h2>Detaljer för avdelning: @(ViewBag.NewDepartment ? "ny avdelning" : Model.DepartmentId)</h2>
<p class="info">Du är inloggad som administratör</p>

<form method="post" asp-controller="Administrator" asp-action="SaveDepartment">
    <p>
        <label asp-for="DepartmentId" class="label">Id:</label><br />
        @if (ViewBag.NewDepartment)
        {
            <input asp-for="DepartmentId" />
        }
        else
        {
            <input asp-for="DepartmentId" readonly value="@Model.DepartmentId" />
        }
        <span asp-validation-for="DepartmentId" style="color: orange"></span>
    </p>
    <p>
        <label asp-for="DepartmentName" class="label">Namn:</label><br />
        <input asp-for="DepartmentName" />
        <span asp-validation-for="DepartmentName" style="color: orange"></span>
    </p>
    <p>
        <input class="button" type="submit" value="Spara" />
    </p>
</form>