@model IEnvCrimeRepository

@{
	Layout = "_CoordinatorNavigation";
}

<!-- Rubriken ligger i Crime-sidan -->
<h2>Detaljer för ärendet</h2>
<p class="info">Du är inloggad som @ViewBag.RoleName</p>

<!-- Detaljer för ärendet ritas ut av Vy-komponenten-->
@await Component.InvokeAsync("Errand", ViewBag.ErrandId)

<!-- Html-kontroller som är specifika för varje roll sköts av rollens Crime-sida -->
<section id="bottomColumn">
	<h3>Redigera ärende</h3>
	<p>
		Ange enhet:
		<select name="department">
			<option selected="selected">Välj</option>
			@foreach (var dept in Model.Departments)
			{
				<option value="@dept.DepartmentId">@dept.DepartmentName</option>
			}
		</select>
	</p>
	<p><input class="button" type="submit" value="Spara" /></p>
</section>