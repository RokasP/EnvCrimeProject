@model ErrandSearchQueryDto

@{
    Layout = "_Staff";
}

<h2>Ärenden</h2>
<p class="info">Du är inloggad som handläggare</p>

<table id="managerForm">
    <tr>
        <td class="label">Välj status:</td>
        <td>&nbsp;</td>
        <td class="label">Ärendenummer:</td>
        <td>&nbsp;</td>
    </tr>
    <tr>
        <form method="post" asp-controller="Investigator" asp-action="StartInvestigator">
            <td>
                <select asp-for="StatusId" asp-items="@(new SelectList(ViewBag.Statuses, "StatusId", "StatusName"))">
                    <option selected value="">Välj alla</option>
                </select>
            </td>
            <td><input class="button" type="submit" value="Hämta lista" /></td>
        </form>
        <form method="post" asp-controller="Investigator" asp-action="StartInvestigator">
            <td><input asp-for="RefNumber" /></td>
            <td><input class="button" type="submit" value="Sök" /></td>
        </form>
    </tr>
</table>

@await Component.InvokeAsync("ErrandList", Model)
