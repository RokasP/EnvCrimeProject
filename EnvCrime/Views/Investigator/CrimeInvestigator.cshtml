@model IEnumerable<ErrandStatus>

@{
    Layout = "_Staff";
}

@await Component.InvokeAsync("Errand", "handläggare")

<section id="bottomColumn">
    <h3>Redigera ärende</h3>

    <form method="post" asp-controller="Investigator" asp-action="UpdateCrime" enctype="multipart/form-data">
        <!-- onsynliga fältet nedanför används för att föra över "errandId" till motsvarande action-metoden i kontrollern
        då ViewBag inte fungerar där -->
        <input type="hidden" name="errandId" value="@ViewBag.ErrandId" />

        <p class="label">Ytterligare information:</p>
        <textarea name="information" rows="5" cols="60"></textarea>

        <p class="label">Händelser:</p>
        <textarea name="events" rows="5" cols="60"></textarea>

        <p class="label">Prover:</p>
        <input type="file" name="loadSample" />

        <p class="label">Ladda upp bilder:</p>
        <input type="file" name="loadImage" accept=".jpg, .jpeg, .gif, .bmp, .png" />

        <p class="label">Ändring av status:</p>
        <select name="selectedStatusId">
            <option selected="selected" disabled>Välj</option>
            @foreach (var status in Model)
            {
                <option value="@status.StatusId">@status.StatusName</option>
            }
        </select>
        <p>
            <input class="button" type="submit" value="Spara ändringarna" />
        </p>
    </form>
</section>